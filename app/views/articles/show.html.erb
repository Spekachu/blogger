<h1><%= @article.title %></h1>

<p>
  <% if @article.tags.size > 0 %>
    Tags:
    <% @article.tags.each do |tag| %>
      <%= link_to tag.name, tag_path(tag) %>
    <% end %>
  <% end %>
</p>

<p><%= @article.body %></p>

<h3>Comments (<%= @article.comments.size %>)</h3>
<% if @article.comments.size == 0 %>
  <p>No Comments.</p>
<% end %>

<%= render partial: 'articles/comment', collection: @article.comments %>

<%= render partial: 'comments/form' %>

<%= link_to "<< Back to Articles List", articles_path, class: "shadow_button" %>
<%= link_to "Edit", edit_article_path(@article), class: "shadow_button" %>
<%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Really delete the article?"}, class: "shadow_button" %>