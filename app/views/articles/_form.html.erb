<%= form_for (@article) do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
    <li> <%= error %> </li>
    <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.submit class: "shadow_button" %>
  </p>
<% end %>
<%= link_to "<< Back to Tag List", tags_path, class: "shadow_button" %>
<%= link_to "<< Back to Articles List", articles_path, class: "shadow_button" %>